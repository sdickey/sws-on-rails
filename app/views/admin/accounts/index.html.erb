<div class="container">
  <div class="row">
    <div class="col-md-8 col-md-offset-2">
      <h1>A view for the list of accounts. This will be a table of all accounts, with destroy links next to them</h1>

      <% @accounts.each do |account| %>
        <li><%= account.email %> <% account.pets.each do |pet| %>
          <li><%= pet.name %></li>
        <% end %>
          <%= link_to 'delete', account_path(account.id), :class => 'pull-right', method: :delete %></li>
      <% end %>
    </div>
  </div>
</div>
