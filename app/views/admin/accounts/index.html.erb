<div class="container">
  <div class="row">
    <div class="col-md-8 col-md-offset-2 well well-lg">
      <div class="well well-lg" style="background: #fafafa;">
        <h1 class="form-header">SWS Accounts</h1>
      </div>


      <div class="well well-lg admin-manage-accounts" style="background: #fafafa;">
        <% @accounts.each do |account| %>
          <% unless account.admin %>
            <% account.owners.each do |owner| %>
              <li>
                <%= owner.first_name %> <%= owner.last_name %>
            </li>
            <% end %>
                <%= link_to 'delete', account_path(account.id), method: :delete, data: { confirm: 'Are you sure you want to delete this account?'}, :class => 'btn btn-danger pull-right' %>
                <%= link_to 'view account', account_dashboard_path(account.id), :class => 'btn btn-primary' %>
            <hr>
          <% end %>
        <% end %>
      </div>
    </div>
  </div>
</div>
