<div class="container">
  <div class="row">
    <div class="col-md-8 col-md-offset-2 well well-lg">
      <div class="well well-lg" style="background: #fafafa;">
        <h1 class="form-header">Edit Owner</h1>
      </div>
      <%= form_for ([@account, @account.owners.build]), url: account_owner_path(@owner.account_id, @owner.id), method: :put do |f| %>
        <div class="well well-lg" style="background: #fafafa;">
          <%= f.label "First name" %><br>
          <%= f.text_field :first_name, :value => @owner.first_name %><br>
          <%= f.label "Last name" %><br>
          <%= f.text_field :last_name, :value => @owner.last_name %><br>
          <%= f.label :Email %><br>
          <%= f.text_field :email, :value => @owner.email %><br>
        </div>
        <div class="well well-lg" style="background: #fafafa;">
          <%= f.label :Address %><br>
          <%= f.text_field :address, :value => @owner.address %><br>
          <%= f.label "Home phone" %><br>
          <%= f.text_field :home_phone, :value => @owner.home_phone %><br>
          <%= f.label "Work phone" %><br>
          <%= f.text_field :work_phone, :value => @owner.work_phone %><br>
          <%= f.label "Cell phone" %><br>
          <%= f.text_field :cell_phone, :value => @owner.cell_phone %><br>
        </div>
        <p>
          <%= f.submit :value => "Update owner", :class => "btn btn-primary" %>
          <%= link_to 'Back', new_account_owner_path, :class => 'btn btn-primary' %>
        </p>
      <% end %>
    </div>
  </div>
</div>