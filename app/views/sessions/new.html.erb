<div class="container">
  <div class="row">
    <div class="col-md-4 col-md-offset-4 well well-lg">
      <h1>Login</h1>
      <%= form_tag sessions_path do %>
        <p>
          <%= label_tag :Email %><br>
          <%= text_field_tag :email, params[:email] %>
        </p>
        <p>
          <%= label_tag :Password %><br>
          <%= password_field_tag :password %>
        </p>
        <p>
          <%= submit_tag 'Log in', :class => 'btn btn-primary' %>
        </p>
      <% end %>
    </div>
  </div>
</div>
